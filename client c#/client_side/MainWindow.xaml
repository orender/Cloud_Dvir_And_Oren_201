<Window x:Class="client_side.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client_side"
        mc:Ignorable="d"
                Title="Collaborative Text Editor" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtFileContent" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10"/>
        <Button Content="Save" VerticalAlignment="Top" Margin="0,293,0,0" Click="SaveButton_Click" RenderTransformOrigin="-8.351,0.743" Height="22" Width="37"/>
    </Grid>
</Window>
