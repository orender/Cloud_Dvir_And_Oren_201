<Window x:Class="client_side.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client_side"
        mc:Ignorable="d"
        Title="Main Menu" Height="600" Width="1000">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="txtFileName" Foreground="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,20,0,0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <Button Content="Create New File" Foreground="AliceBlue" Width="200" Height="100" FontSize="18" Margin="0,0,0,20" Click="CreateNewFileButton_Click"/>
            <Button Content="Show Existing Files" Foreground="AliceBlue" Width="200" Height="100" FontSize="18" Click="ShowExistingFilesButton_Click"/>
        </StackPanel>
    </Grid>
</Window>