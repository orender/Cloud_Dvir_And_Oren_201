<Window x:Class="client_side.CreateNewFIle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client_side"
        mc:Ignorable="d"
        Title="CreateNewFIle" Height="600" Width="1000">
    <Border CornerRadius="3" BorderBrush="White" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="427" Width="636">
        <StackPanel Margin="20">
            <Label Content="File Name:" FontSize="20" Margin="0,100,0,10" Height="47" Width="106"/>
            <TextBox x:Name="txtFileName" Width="250" Margin="0,0,0,10" Height="32" />
            <Label x:Name="lblErr" Foreground="Red" FontWeight="Bold" Height="30" HorizontalAlignment="Center"></Label>
            <Button Margin="0,50,0,10" Width="250" Click="btnCreateFile_Click" Content="Create!"/>
            <Button Margin="0,10,0,0" Width="250" Click="btnReturnToMenu_Click" Content="Back"/>
        </StackPanel>
    </Border>
</Window>
